extends page-template.pug

block content
	+crumbs('template-images/news-all__title.png', 'Каталог продукции', 'Каталог')
	// Содержимое страницы "Каталог"
	.catalog.inn_padd
		.catalog__inner.site-width
			// Сортировка
			.catalog__sorting
				.catalog__sorting-float-block
					// Показать только новинки
					.catalog__sorting-only-new
						// Делается активным добавлением класса .active блоку .catalog__sorting-only-new-a
						a.catalog__sorting-only-new-a(href='#') Показать только новинки
							.catalog__sorting-only-new-bullet
					// Сортировать по алфавиту
					// Активный параметр определяется классом .active
					.catalog__sorting-alphabet
						a.catalog__sorting-alphabet-a-z.active(href='#') 
							.catalog__sorting-alphabet-a-z-txt Сортировать:
							strong А
							i.fa.fa-long-arrow-right(aria-hidden="true")
							strong Я
						a.catalog__sorting-alphabet-z-a(href='#') 
							.catalog__sorting-alphabet-z-a-txt Сортировать:
							strong Я
							i.fa.fa-long-arrow-right(aria-hidden="true")
							strong А
			
			.catalog__cols
				// Первая колонка
				.catalog__col1
					// Меню
					.catalog__menu
						// Раздел каталога
						//- .active-item
						.catalog__menu-item.active-item
							.catalog__menu-item-title Лекарственные средства
								.catalog__menu-item-title-arrow
									i(class="fa fa-angle-down" aria-hidden="true")
									i(class="fa fa-angle-up" aria-hidden="true")
							// Подраздел каталога
							.catalog__submenu
								a(href='#').catalog__submenu-item.active Сиропы
									.catalog__submenu-item-label
								a(href='#').catalog__submenu-item Гематогены
									.catalog__submenu-item-label
								a(href='#').catalog__submenu-item Таблетки
									.catalog__submenu-item-label
								a(href='#').catalog__submenu-item Порошки и гранулы
									.catalog__submenu-item-label
								a(href='#').catalog__submenu-item Капсулы
									.catalog__submenu-item-label
								a(href='#').catalog__submenu-item Прочие лекарственные средства
									.catalog__submenu-item-label
						// Раздел каталога
						.catalog__menu-item
							.catalog__menu-item-title Биологически активные добавки
								.catalog__menu-item-title-arrow
									i(class="fa fa-angle-down" aria-hidden="true")
									i(class="fa fa-angle-up" aria-hidden="true")
							// Подраздел каталога
							.catalog__submenu.hide
								a(href='#').catalog__submenu-item Сиропы
									.catalog__submenu-item-label
								a(href='#').catalog__submenu-item Гематогены
									.catalog__submenu-item-label
						// Раздел каталога
						.catalog__menu-item
							.catalog__menu-item-title Пищевые продукты
								.catalog__menu-item-title-arrow
									i(class="fa fa-angle-down" aria-hidden="true")
									i(class="fa fa-angle-up" aria-hidden="true")
							// Подраздел каталога
							.catalog__submenu.hide
								a(href='#').catalog__submenu-item Сиропы
									.catalog__submenu-item-label
								a(href='#').catalog__submenu-item Гематогены
									.catalog__submenu-item-label
						//- script(src='js/catalog__menu.js')
					// Баннер
					.catalog__banner
						img.catalog__banner-img(src='template-images/catalog__banner.png')
				// Вторая колонка
				.catalog__col2
					// Карточка товаров
					.catalog__items
						+catalog__card('template-images/catalog__card-img1.png', 'Сироп "Розавит"', 'Средство, регулирующее метаболические процессы', 'on', '')
						+catalog__card('template-images/catalog__card-img2.png', 'Сироп "Подорожник с витамином С"', 'Средство, оказывающее отхаркивающее,  противовоспалительное и муколитическое действие.', '', 'on')
						+catalog__card('template-images/catalog__card-img3.png', 'Сироп "Девясил с витамином С"', 'Средство, применяемое при кашле и простудных заболеваниях. Отхаркивающее средство', 'on', '')
						+catalog__card('template-images/catalog__card-img4.png', 'Сироп "Алтей"', 'Средство, стимулирующее отхаркивание', '', '')
						+catalog__card('template-images/catalog__card-img5.png', 'Сироп "Чебрец в витамином С"', 'Средство, применяемое при кашле и простудных заболеваниях. Отхаркивающее средство', '', '')
						+catalog__card('template-images/catalog__card-img6.png', 'Сироп "Трависил"', 'Отхаркивающее средство растительного происхождения', 'on', '')
						+catalog__card('template-images/catalog__card-img7.png', 'Сироп "Трависил без сахара"', 'Отхаркивающее средство растительного происхождения', '', '')
						+catalog__card('template-images/catalog__card-img7.png', 'Сироп "Флюколд"', 'Симптоматическое лечение гриппа и простуды', '', '')
						div(style='width: 318px')
						div(style='width: 318px')
					// Текст
					.catalog__text
						.main-text__title Лекарственные препараты и пищевые добавки
						.main-text__text Производство продукции осуществляется на основании промышленных регламентов, технологических инструкций, стандартных операционных процедур (СОП). На предприятии действует собственная служба обеспечения и контроля  качества. Высококвалифицированный персонал выполняет работы по входному промежуточному контролю, а также контроль качества готовой продукции, контролирует хранение и реализацию. Процесс производства, обеспечения и контроль качества продукции ОАО "Экзон" гарантирует безопасность продукции, эффективность и полное соответствие техническим нормативным правовым актам и нормативным документам.
						// Кнопка "Подробнее" с текстом
						+read-more-bootstrap('Подробно', 'Производство продукции осуществляется на основании промышленных регламентов, технологических инструкций, стандартных операционных процедур (СОП). На предприятии действует собственная служба обеспечения и контроля  качества. Высококвалифицированный персонал выполняет работы по входному промежуточному контролю, а также контроль качества готовой продукции, контролирует хранение и реализацию. Процесс производства, обеспечения и контроль качества продукции ОАО "Экзон" гарантирует безопасность продукции, эффективность и полное соответствие техническим нормативным правовым актам и нормативным документам.')
	// Примите участие в опросе
	+page-main-interview
	// Подсветка активного пункта меню
	script(src='js/active-page__catalog.js')
